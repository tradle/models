{
  "id": "tradle.OnfidoApplicant",
  "title": "Personal Info",
  "interfaces": [
    "tradle.Message"
  ],
  "subClassOf": "tradle.Form",
  "type": "tradle.Model",
  "properties": {
    "personalinfo_group": {
      "type": "string",
      "title": "Personal Info",
      "list": [
        "givenName",
        "surname",
        "dateOfBirth"
      ]
    },
    "givenName": {
      "title": "Given name(s)",
      "type": "string"
    },
    "surname": {
      "type": "string"
    },
    "formattedName": {
      "type": "string",
      "title": "Name",
      "displayAs": "{1} {2}",
      "group": [
        "givenName",
        "surname"
      ]
    },
    "dateOfBirth": {
      "type": "date",
      "maxDate": "18 years before",
      "minDate": "120 years before"
    },
    "formattedAddress": {
      "type": "string",
      "displayAs": "{1} {2} {3} {4}, {5}, {6}",
      "group": [
        "flatNumber",
        "buildingNumber",
        "street",
        "subStreet",
        "town",
        "postcode"
      ],
      "title": "Address",
      "readOnly": true
    },
    "address_group": {
      "type": "string",
      "title": "Address",
      "list": [
        "flatNumber",
        "buildingNumber",
        "street",
        "subStreet",
        "town",
        "postcode",
        "country"
      ]
    },
    "flatNumber": {
      "type": "string"
    },
    "buildingNumber": {
      "type": "string"
    },
    "street": {
      "type": "string"
    },
    "subStreet": {
      "type": "string"
    },
    "town": {
      "type": "string"
    },
    "postcode": {
      "type": "string"
    },
    "country": {
      "type": "object",
      "ref": "tradle.Country"
    }
  },
  "required": [
    "givenName",
    "surname",
    "dateOfBirth",
    "buildingNumber",
    "street",
    "town",
    "postcode",
    "country"
  ],
  "viewCols": [
    "formattedName",
    "dateOfBirth",
    "formattedAddress"
  ],
  "editCols": [
    "personalinfo_group",
    "address_group"
  ]
}
