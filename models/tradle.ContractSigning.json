{
  "id": "tradle.ContractSigning",
  "type": "tradle.Model",
  "title": "Contract Signing",
  "subClassOf": "tradle.Form",
  "properties": {
    "title": {
      "type": "string",
      "displayName": true
    },
    "contractText": {
      "type": "string",
      "markdown": true
    },
    "signature": {
      "type": "object",
      "ref": "tradle.Photo",
      "inlined": true,
      "skipLabel": true,
      "signature": true
    },
    "daysTillFirstScheduledPayment": {
      "type": "number",
      "readOnly": true
    },
    "term": {
      "type": "number",
      "units": "months",
      "readOnly": true
    },
    "firstScheduledPaymentDue": {
      "type": "date",
      "readOnly": true,
      "set": "Date.now() + daysTillFirstScheduledPayment * 24 * 60 * 60 * 1000"
    }
  },
  "required": [
    "title",
    "contractText",
    "signature"
  ],
  "viewCols": [
    "title",
    "term",
    "firstScheduledPaymentDue",
    "contractText",
    "signature"
  ]
}
