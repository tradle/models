{
  "id": "tradle.KeyStaff",
  "type": "tradle.Model",
  "title": "Key Staff",
  "interfaces": [
    "tradle.Message"
  ],
  "subClassOf": "tradle.Form",
  "properties": {
    "_t": {
      "type": "string",
      "readOnly": true
    },
    "from": {
      "type": "object",
      "readOnly": true,
      "ref": "tradle.Identity"
    },
    "to": {
      "type": "object",
      "readOnly": true,
      "ref": "tradle.Identity"
    },
    "title": {
      "type": "string"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "role": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "displayAs": "{1} {2} {3}",
      "group": [
        "title",
        "firstName",
        "lastName"
      ],
      "readOnly": true,
      "displayName": true
    },
    "photos": {
      "type": "array",
      "range": "photo",
      "inlined": true,
      "items": {
        "ref": "tradle.Photo"
      }
    }
  },
  "required": [
    "title",
    "firstName",
    "lastName"
  ],
  "viewCols": [
    "name",
    "role",
    "photos"
  ]
}
