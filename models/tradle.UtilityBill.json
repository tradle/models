{
  "id": "tradle.UtilityBill",
  "type": "tradle.Model",
  "title": "Utility Bill",
  "subClassOf": "tradle.ProofOfAddress",
  "style": {
    "backgroundColor": "#EBE1FA"
  },
  "properties": {
    "billDate": {
      "type": "date",
      "displayName": true
    },
    "issuedBy": {
      "type": "string"
    },
    "utilityType": {
      "type": "string"
    },
    "typeOfDocument": {
      "type": "object",
      "ref": "tradle.ProofOfAddressType"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "country": {
      "type": "object",
      "ref": "tradle.Country"
    },
    "postalCode": {
      "type": "string"
    },
    "region": {
      "type": "string"
    },
    "street": {
      "type": "string"
    },
    "formattedAddress": {
      "type": "string",
      "displayAs": "{1} {2}, {3}, {4}",
      "group": [
        "street",
        "city",
        "region",
        "postalCode"
      ],
      "title": "Address",
      "readOnly": true
    },
    "accountNumber": {
      "type": "string"
    },
    "totalAmountDue": {
      "type": "object",
      "ref": "tradle.Money"
    },
    "issuerPhone": {
      "type": "string",
      "range": "phone"
    },
    "issuerEmail": {
      "type": "string",
      "range": "email"
    },
    "document": {
      "type": "object",
      "range": "document",
      "allowPicturesFromLibrary": true,
      "title": "Proof of address document",
      "ref": "tradle.Photo"
    },
    "issuer_group": {
      "type": "string",
      "title": "Issuer",
      "list": [
        "utilityType",
        "issuedBy",
        "issuerPhone",
        "issuerEmail"
      ]
    }
  },
  "required": [
    "document"
  ],
  "editCols": [
    "document"
  ],
  "viewCols": [
    "issuedBy",
    "accountNumber",
    "totalAmountDue",
    "formattedAddress",
    "billDate",
    "issuer_group",
    "document"
  ]
}